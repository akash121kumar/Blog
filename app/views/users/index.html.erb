<h1 align="center">All Alpha-Bloggers</h1>
<% if logged_in? and current_user.admin? %>
  <%= link_to "Create new user",signup_path ,class:"btn btn-primary center" %>
<% end %>
<div class="d-flex justify-content-center">
  <%= will_paginate %>
</div>

<% @users.each do |user| %>
  <ul class="listing">
   <div class="row justify-content-center">
     <div class= "card bg-light text-dark text-center col-md-4 col-md-offset-4 ">

       <li><%= link_to gravatar_for(user),user_path(user) %> </li>
       <li class= "article-title">
         <%= link_to user.username,user_path(user) %>
       </li>
       <li><small><%= pluralize(user.articles.count, " articles") if user.articles %></small></li>
      <% if logged_in? and current_user.admin? %>
        <li><%= link_to "Delete User",user_path(user), method: :delete,data: {confirm: "Are you sure you want to delete the user and there articles?"} %>
        </li>
      <% end %>
     <div>
   <div>
  </ul>
<% end %>

<div class="d-flex justify-content-center">
  <%= will_paginate %>
</div>
