<h1 align="center">Create new Category <h1>
  <%= render 'shared/errors',obj: @category %>
  </br>
  <div class='row'>

    <div class='col-12'>


      <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>

          <div class="form-group row">

            <div class="control-label col-sm-2">

                <%= f.label :name %>

            </div>

            <div class="col-sm-8">

              <%= f.text_field :name, class: "form-control", placeholder: "Enter Category name", autofocus: true %>

            </div>


            <div class="col-sm-offset-4 col-sm-10" align="center" >

                <%= f.submit class: 'btn btn-primary btn-lg' %>

            </div>

          </div>

      <% end %>
    </div>
  </div>

  <div class="col-xs-4 col-xs-offset-4" >

  <small>  [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]</small>

  </div>
